@model ContactViewModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="well">
    <address>
        One Microsoft Way<br />
        Redmond, WA 98052-6399<br />
        <abbr title="Phone">P:</abbr>
        425.555.0100
    </address>

    <address>
        <strong>Support:</strong> <a href="mailto:Support@example.com">Support@example.com</a><br />
        <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
    </address>
    <hr />
    <p>Leave us a message bellow:</p>
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group col-lg-4 col-md-4 col-sm-12">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4 col-md-4 col-sm-12">
            <label asp-for="Email">Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-4 col-md-4 col-sm-12">
            <label asp-for="Subject">Subject</label>
            <input type="text" class="form-control" asp-for="Subject" placeholder="Subject">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-12 col-md-12 col-sm-12">
            <label asp-for="Message">Message</label>
            <textarea rows="4" class="form-control" asp-for="Message" placeholder="Message"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>
        <input type="submit" name="submit" value="Send Message" class="btn btn-primary" />
        <div>@ViewBag.UserMessage</div>

    </form>
</div>
@section Scripts{ 
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}